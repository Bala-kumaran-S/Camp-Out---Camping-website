<% layout('layouts/boilerplate')%>
  <h1>Edit Campground</h1>
  <form action="/camps/<%= campground.id %>/edit" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= campground.title %>" required><br>

    <label for="description">Description:</label>
    <textarea id="description" name="description" required><%= campground.description %></textarea><br>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="<%= campground.price %>" required><br>

    <label for="imageUrl">Image URL:</label>
    <input type="url" id="imageUrl" name="imageUrl" value="<%= campground.imageUrl %>"required><br>

    <button type="submit">Save Changes</button>
  </form>
  <br>
  <a href="/camps/<%= campground.id %>">Cancel</a>

