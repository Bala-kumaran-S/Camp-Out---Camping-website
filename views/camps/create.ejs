<% layout('layouts/boilerplate')%>
  <h1>Create a New Campground</h1>
  <form action="/camps" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required><br>

    <label for="description">Description:</label>
    <textarea id="description" name="description" required></textarea><br>

    <label for="price">Price (per night):</label>
    <input type="number" id="price" name="price" min="0" step="0.01" required><br>

    <label for="imageUrl">Image URL:</label>
    <input type="url" id="imageUrl" name="imageUrl" required><br>

    <button type="submit">Create Campground</button>
  </form>

