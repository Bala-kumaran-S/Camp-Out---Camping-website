<% layout('layouts/boilerplate')%>
  <h1>All Campgrounds | <a class="main-a" href="/camps/new">create new camp</a></h1>
  <ul>
    <% campgrounds.forEach(camp => { %>
      <li>
        <div class="card mb-3 camp">
          <div class="row g-0">
            <div class="col-md-6 img-c">
              <img src="<%= camp.imageUrl %>" alt="<%= camp.title %>" class="rounded-start">
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <a href="/camps/<%= camp.id %>" class="card-title"><%= camp.title %></a>
                <p class="card-text"><%= camp.description %></p>
                <p><strong>Price:</strong> $<%= camp.price %> per night</p>
              </div>
            </div>
          </div>
        </div>
        </li>
    <% }) %>
  </ul>

  <style>
    main {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    main h1 {
      text-align: center;
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .card-title {
      text-align: center;
      color: #333;
      margin-top: 20px;
      font-size: larger;
      font-weight: 600;
    }
    .card-title:hover {
      color: #094d3e;
      transition: all 0.3s ease-in-out;
    }


    a {
      text-decoration: none;
      color: #3498db;
    }

    a:hover {
      color: #2980b9;
    }

    ul {
      list-style: none;
      padding: 0;
    }
    
    li{
      width: 100%;
      height: auto;
      display: flex;
      align-items: center;
      justify-content: center;
      animation: fadeIn 1s ease-in-out;
    }

    .camp {
      height: 90%;
      width: 90%;
      border-radius: 18px;
      box-shadow: #333 0px 0px 10px;
    }


    img {
      width: 100%;
      height:100%;
      object-fit: cover;
      border-radius: 18px;
      padding: 3px;
    }

    p {
      color: #666;
    }

    p strong {
      color: #333;
    }

    .create-new {
      display: block;
      text-align: center;
      margin: 20px auto;
      padding: 10px 20px;
      background-color: #3498db;
      color: #fff;
      border-radius: 5px;
      width: 200px;
    }

    .create-new:hover {
      background-color: #2980b9;
    }

    @keyframes fadeIn {
      from {
        opacity: 0.3;
        transform: translateX(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>